<div class="jumbotron">
  <h1 class="display-4">Welcome to Boox!</h1>
  <p class="lead">You can trade your books in here.</p>
  <hr class="my-4">
</div>

<h3>Here are some books.</h3>

<div class="album py-5 bg-light">
  <div class="container">
    <div class="row">
      <% @books.each do |book| %>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <div class="card-header"><%= book.title %></div>
            <div class="card-body">
              <p class="card-text">Written by <b><%= book.author %></b>.</p>
              <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted"><%= book.pagecount %> pages.</small>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
