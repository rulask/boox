<h1>Shared Books</h1>

<div class="album py-5 bg-light">
  <div class="container">
    <div class="row">
      <% @books.each do |book| %>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <div class="card-header"><%= book.title %></div>
            <div class="card-body">
              <p class="card-text">Written by <b><%= book.author %></b>.</p>
              <p class="card-text"><%= link_to book.user.username, user_path(book.user)%></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <%= link_to 'Show', book_path(book), :class => "btn btn-sm btn-outline-secondary" %>
                  <button type="button" class="btn btn-sm btn-outline-secondary" disabled><%= book.trades.count > 0 ? 'Has offers' : 'Has no offers'%></button>
                </div>
                <small class="text-muted"><%= book.pagecount %> pages.</small>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
